<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="DvVcs">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <mapping-file>java/persvcs/META-INF/Mapping.xml</mapping-file>
        <class>persvcs.VersiontablePers</class>
        <properties>
            <property name="org.eclipse.persistence.jdbc.url" value="jdbc:derby:/home/dvvcs;create=true"/>
            <property name="org.eclipse.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="org.eclipse.persistence.jdbc.user" value=""/>
            <property name="org.eclipse.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>